APP_NAME=Synergize
APP_ENV=production
APP_KEY=
# CRITICAL: Must be false in production!
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com

# Frontend URL for CORS and redirects
FRONTEND_URL=https://your-domain.com

# Logging - Use warning or error in production
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database - PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=synergize
DB_USERNAME=synergize_user
DB_PASSWORD=your_secure_password_here

# Session - CRITICAL: Must be encrypted in production!
SESSION_DRIVER=database
# 3 days = 4320 minutes
SESSION_LIFETIME=4320
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true

# Cache - Use Redis in production for better performance
CACHE_STORE=redis
CACHE_PREFIX=synergize_

# Queue - Use Redis in production
QUEUE_CONNECTION=redis

# Steam API Configuration
STEAM_API_KEY=your_steam_api_key_here
STEAM_CALLBACK_URL="${APP_URL}/api/v1/auth/steam/callback"

# Redis (required for production)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum - Update with your actual domain
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_ADMIN=30
RATE_LIMIT_PURCHASES=10
